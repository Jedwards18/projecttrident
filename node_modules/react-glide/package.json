{
  "name": "react-glide",
  "version": "2.0.0",
  "description": "A multi purpose carousel module built in React.",
  "author": "andrewangelle",
  "repository": "http://github.com/andrewangelle/react-glide.git",
  "main": "lib/react-glide.min.js",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --config example/webpack.config.js",
    "test": "jest --watchAll",
    "test:once": "jest",
    "coverage": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src test",
    "preversion": "npm run build && git add -A lib"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(css)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ]
  },
  "keywords": [
    "react",
    "component"
  ],
  "peerDependencies": {
    "react": "^0.14.6 || 15.x.x"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "react-preload": "^0.5.0",
    "react-transition-group": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "coveralls": "^2.13.1",
    "cross-env": "^3.1.3",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^5.0.1",
    "eslint-loader": "^1.5.0",
    "eslint-plugin-react": "^3.16.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "html-webpack-plugin": "^2.22.0",
    "jest": "^18.1.0",
    "jest-cli": "^20.0.4",
    "jest-css-modules": "^1.1.0",
    "react": "~15.4.2",
    "react-addons-test-utils": "~15.4.2",
    "react-dom": "~15.4.2",
    "react-test-renderer": "~15.4.2",
    "sinon": "^2.3.8",
    "style-loader": "^0.13.1",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0"
  }
}
