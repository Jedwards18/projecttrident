{
  "name": "react-wordcloud",
  "version": "0.0.1",
  "description": "React component for demonstration purposes http://purii.github.io/react-wordcloud-demo/",
  "author": "Patrick Puritscher <hello@patrickpuritscher.com>",
  "license": "MIT",
  "keywords": [
    "reactjs",
    "d3",
    "wordcloud"
  ],
  "homepage": "https://github.com/Purii/react-wordcloud-demo#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Purii/react-wordcloud-demo.git"
  },
  "bugs": {
    "url": "https://github.com/Purii/react-wordcloud-demo/issues"
  },
  "main": "lib/index.js",
  "jsnext:main": "es/index.js",
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "scripts": {
    "clean": "rimraf lib dist es",
    "check:src": "npm run lint && npm run test",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build:umd": "cross-env BABEL_ENV=commonjs webpack src/index.js dist/react-wordcloud.js",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack -p src/index.js dist/react-wordcloud.min.js",
    "build": "npm run build:commonjs && npm run build:es && npm run build:umd && npm run build:umd:min",
    "bundle": "npm run clean && npm run check:src && npm run build",
    "lint": "eslint src test",
    "test": "cross-env BABEL_ENV=commonjs mocha --compilers js:babel-register --recursive"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "babel-cli": "^6.6.4",
    "babel-core": "^6.6.0",
    "babel-eslint": "^5.0.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "cross-env": "^1.0.7",
    "css-loader": "^0.23.1",
    "enzyme": "^2.0.0",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-react": "^4.1.0",
    "expect": "^1.14.0",
    "exports-loader": "^0.6.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "imports-loader": "^0.6.5",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "normalize.css": "^3.0.3",
    "postcss-loader": "^0.8.1",
    "react": "^0.14.7",
    "react-addons-test-utils": "^0.14.7",
    "react-dom": "^0.14.7",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.0",
    "webpack": "^1.12.14",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "d3-cloud": "^1.2.1",
    "lodash": "^4.5.1",
    "lodash-es": "^4.5.1"
  },
  "peerDependencies": {
    "babel-polyfill": "^6.6.1",
    "normalize.css": "^3.0.3",
    "react": "^0.14.7",
    "react-dom": "^0.14.7"
  }
}
